<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contact.Maui.Properties.Views.ContactPage"
             Title="Contact">
    <!--Use listview-->
    <ListView x:Name="listContacts"
              BackgroundColor="Transparent"
              SeparatorColor = "silver"   
              RowHeight="50"
              >
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell  Text="{Binding Name}"
                           Detail="{Binding Email}"></TextCell>
                <!--{} here is like JavaScript, refers to an object-->
                what {} refers to is the one that being bond to the item,??????
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>